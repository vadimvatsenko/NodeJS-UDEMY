<h1>Add new courses</h1>

<form action="/add" method="POST">
<div class="input-field">
    <input id="title"name="title" type="text" class="validate" required>
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="wrong name" data-success="right name"></span>
</div>
<div class="input-field">
    <input id="price" name="price" type="text" class="validate" required min="1">
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="wrong price" data-success="right price"></span>
</div>
<div class="input-field">
    <input id="image" name="img" type="text" class="validate" required>
    <label for="image">URL course</label>
    <span class="helper-text" data-error="img" data-success="right"></span>
</div>
<button class="btn ntn-primary">Add Course</button>
</form>